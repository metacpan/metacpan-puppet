# /etc/munin/munin.conf - Configuration file for the munin master
#
# This file is handled by puppet, all local modifications will be lost

<% if @dbdir -%>
dbdir <%= @dbdir %>
<% end -%>
<% if @htmldir -%>
htmldir <%= @htmldir %>
<% end -%>
<% if @logdir -%>
logdir <%= @logdir %>
<% end -%>
<% if @rundir -%>
rundir <%= @rundir %>
<% end -%>
<% if @html_strategy -%>
html_strategy  <%= @html_strategy %>
<% end -%>
<% if @graph_strategy -%>
graph_strategy <%= @graph_strategy %>
<% end -%>
<% if @tls == 'enabled' -%>
tls = <%= @tls %>
tls_certificate = <%= @tls_certificate %>
tls_private_key = <%= @tls_private_key %>
tls_verify_certificate = <%= @tls_verify_certificate %>
<% end -%>
<% if @extra_config -%>

<% @extra_config.each do |this| -%>
<%= this %>
<% end -%>
<% end -%>

# Where to look for puppet generated munin master configuration.
includedir /etc/munin/munin-conf.d
